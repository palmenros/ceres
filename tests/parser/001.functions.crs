fn gcd(a: i32, b: i32) i32 {
    var max = a;
    var min = b;    
    
    if b > a {
        max = b;
        min = a;
    } else {
        max = b;
    }

    if min == 0 {
        return max;
    }

    return gcd(b, a % b);
}

fn iterative_gcd(var a: i32, var b: i32) i32 {
    var q: i32;
    var r: i32;
    // var q, r : i32;    
    
    while b > 0 {
        q = a / b;
        r = a % b;

        a = b;
        b = r;
    }

    return a;
}
